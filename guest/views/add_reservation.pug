extends layoutNavBar

block content
    h1 #{title}
    form(method='POST', action='/reservations/add')
      #form-group
        label(for='roomstyle') Room Style (Select 1)
          - const roomstyleOptions = [{value: 'Standard Single'}, {value: 'Superior Twin'}, {value: 'Deluxe Double'}, {value: 'Family Suite'}]
            select#roomstyle(name='roomstyle' size='4' multiple required)
                each roomstyle in roomstyleOptions
                  option(value=(roomstyle.value)) #{roomstyle.value}    
      div.form-group
      label(for='startDate') Start Date:
      input#startDate.form-control(type='date', name='startDate', value=(undefined===reservation ? '' : reservation.startDate) )
      label(for='endDate') End Date:
      input#endDate.form-control(type='date', name='endDate', value=(undefined===reservation ? '' : reservation.endDate) )
      br
        
    
      input.btn.btn-primary(type='submit', value='Submit')
        
        
