extends layoutNavBar
//- comment testing
block content
  h1 Confirm Reservation
  p object #{reservation}
  h2 roomNum: #{reservation.roomNum}

      form(method='POST' action='/reservations/addWithRoom')
        div.form-group
          label(for='room') room:
          select#room.form-control(type='select', placeholder='Select room' name='room' required='true' )
                option(value=room) #{reservation.roomNum}
          button.btn.btn-primary(type='submit') Submit



      
